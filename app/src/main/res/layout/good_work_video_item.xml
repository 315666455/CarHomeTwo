<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <lanou.carhometwo.weiget.CircleHead
        app:isCircle="true"
        android:id="@+id/good_work_small_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
      />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:textColor="#4153da"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/good_work_username"
            android:text="我的女神是车手"/>

        <TextView
            android:id="@+id/tv_good_work_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:text="hehe"
            android:textColor="#000000"
            android:textSize="15dp" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_good_work_video_title"
            android:id="@+id/iv_good_work_video"
            android:layout_width="370dp"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_good_work_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_good_work_video"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="嘿接" />

        <TextView
            android:id="@+id/tv_good_work_video_praisenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_good_work_video"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:text="haha" />

        <ImageView
            android:layout_below="@id/iv_good_work_video"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@mipmap/xiaoxi"/>

        <TextView
            android:id="@+id/tv_good_work_video_replycount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_good_work_video"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:text="nihuai" />

        <ImageView
            android:layout_below="@id/iv_good_work_video"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@mipmap/zan"/>
    </RelativeLayout>
</LinearLayout>

